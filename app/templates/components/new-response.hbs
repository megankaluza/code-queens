{{#if addNewResponse}}
  <h1>reply</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="reponse">Reply: </label>
        {{input value=response id="response"}}
      </div>

      <div class="form-group">
        <label for="author">Username: </label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
      <label for="rating">Rating</label>
      {{input value=rating id="rating"}}
    </div>

      <button {{action 'saveResponse'}}>Save</button>

    </form>
  </div>
{{else}}
  <button class="reply" {{action 'responseFormShow'}}>Reply</button>
{{/if}}
