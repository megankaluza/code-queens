{{#if updateQuestionForm}}
<h1>update question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="title">Topic: </label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="user">Username: </label>
      {{input value=user id="user"}}
    </div>

    <div class="form-group">
      <label for="city">City: </label>
      {{input value=city id="city"}}
    </div>

    <div class="form-group">
      <label for="inquiry">Question?: </label>
      {{input value=inquiry id="inquiry"}}
    </div>

    <button {{action 'update' question}}>Save</button>
  </form>
</div>
{{else}}
<button class="update" {{action 'updateQuestionForm' question}}>Update</button>
{{/if}}
