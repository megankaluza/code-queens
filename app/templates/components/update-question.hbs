{{#if updateQuestionForm}}
  <h1>update question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title: </label>
        {{input value=title id="title" placeholder=question.title}}
      </div>

      <div class="form-group">
        <label for="user">Alias: </label>
        {{input value=user id="user" placeholder=question.user}}
      </div>

      <div class="form-group">
        <label for="city">City: </label>
        {{input value=city id="city" placeholder=question.city}}
      </div>

      <div class="form-group">
        <label for="question">Question?: </label>
        {{input value=question id="question" placeholder=question.question}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
